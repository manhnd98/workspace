{
  "projectType": "application",
  "root": "apps/demo-intersection-observer",
  "sourceRoot": "apps/demo-intersection-observer/src",
  "prefix": "workspace",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/demo-intersection-observer",
        "index": "apps/demo-intersection-observer/src/index.html",
        "main": "apps/demo-intersection-observer/src/main.ts",
        "polyfills": "apps/demo-intersection-observer/src/polyfills.ts",
        "tsConfig": "apps/demo-intersection-observer/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/demo-intersection-observer/src/favicon.ico",
          "apps/demo-intersection-observer/src/assets"
        ],
        "styles": [
          "apps/demo-intersection-observer/src/styles.scss",
          "node_modules/@taiga-ui/core/styles/taiga-ui-global.less",
          "node_modules/@taiga-ui/core/styles/taiga-ui-theme.less"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/demo-intersection-observer/src/environments/environment.ts",
              "with": "apps/demo-intersection-observer/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "demo-intersection-observer:build:production"
        },
        "development": {
          "browserTarget": "demo-intersection-observer:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 8398
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "demo-intersection-observer:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/demo-intersection-observer/src/**/*.ts",
          "apps/demo-intersection-observer/src/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/demo-intersection-observer"],
      "options": {
        "jestConfig": "apps/demo-intersection-observer/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
